<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <androidx.cardview.widget.CardView
        android:id="@+id/roundedCard"
        android:layout_width="240dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="16dp"
        android:scaleType="centerCrop"
        app:cardElevation="8dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/cardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/nightapes"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewForever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/roundedCard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Forever"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textViewNightTapes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewForever"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Night Tapes"
        android:textSize="18sp"
        android:textColor="#FFFFFF" />

    <!-- Centered Buttons Layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewNightTapes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp">

        <!-- Play Button -->
        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_play"
            android:contentDescription="Play/Pause Button"
            android:onClick="startMusic"
            android:background="?android:selectableItemBackground" />

        <!-- Pause Button -->
        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:minWidth="48dp"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_pause"
            android:onClick="stopMusic"
            android:contentDescription="Play/Pause Button"
            android:background="?android:selectableItemBackground" />

    </LinearLayout>

</RelativeLayout>
