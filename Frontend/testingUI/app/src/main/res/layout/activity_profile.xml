<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:background="@drawable/gradient_background">

    <!-- Profile Picture -->

    <Button
        android:id="@+id/openChat"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editBio"
        android:layout_marginLeft="157dp"
        android:layout_marginTop="185dp"
        android:layout_toRightOf="@id/setBio"
        android:text="Open Chat with Friend" />

    <Button
        android:id="@+id/removeFriend"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editBio"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="188dp"
        android:layout_toRightOf="@id/setBio"
        android:text="Remove Friend" />

    <Button
        android:id="@+id/addFriend"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editBio"
        android:layout_marginLeft="-88dp"
        android:layout_marginTop="123dp"
        android:layout_toRightOf="@id/setBio"
        android:text="Add Friend" />

    <EditText
        android:id="@+id/friendText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bio"
        android:layout_marginTop="115dp"
        android:hint="Enter Friend Username"
        android:minHeight="48dp" />

    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profilekendall"
        android:contentDescription="Profile Picture" />

    <!-- Username -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/profilePicture"
        android:text="Kendall"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />

    <!-- Bio TextView -->
    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/profilePicture"
        android:text="TEST BIO"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <!-- Bio EditText -->
    <EditText
        android:id="@+id/editBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bio"
        android:minHeight="48dp"
        android:hint="Edit Bio"/>

    <!-- Set Bio Button -->
    <Button
        android:id="@+id/setBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editBio"
        android:layout_gravity="center"
        android:text="Set Bio" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/bottom_nav_menu" />

    <Button
        android:id="@+id/friendList"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editBio"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="120dp"
        android:layout_toRightOf="@id/setBio"
        android:text="Open Friend Profile" />

    <TextView
        android:id="@+id/fullFriendList"
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@+id/removeFriend"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="112dp"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

</RelativeLayout>
