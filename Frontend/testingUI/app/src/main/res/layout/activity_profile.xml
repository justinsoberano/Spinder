<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    android:background="@color/black">

    <!-- Profile Picture -->
    <Button
        android:id="@+id/friends"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/profilePicture"
        android:layout_alignStart="@id/profilePicture"
        android:layout_marginTop="dp"
        android:backgroundTint="@color/gray"
        android:text="Friends"
        android:textSize="15sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/openChat"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/friends"
        android:layout_marginLeft="157dp"
        android:layout_marginTop="185dp"
        android:text="Open Chat with Friend" />

    <Button
        android:id="@+id/removeFriend"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/friends"
        android:layout_marginLeft="-90dp"
        android:layout_marginTop="188dp"
        android:text="Remove Friend" />

    <Button
        android:id="@+id/addFriend"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/friends"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="123dp"
        android:text="Add Friend" />

    <EditText
        android:id="@+id/friendText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bio"
        android:layout_marginTop="115dp"
        android:layout_marginLeft="50dp"
        android:hint="Enter Friend Username"
        android:minHeight="48dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePicture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/profilekendall"
        android:contentDescription="Profile Picture"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF" />


    <!-- Username -->
    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/profilePicture"
        android:text="Kendall"
        android:textColor="#FFFFFF"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/profileSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/profile_settings"
        android:contentDescription="Profile Settings Icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"/>


    <!-- Bio TextView -->
    <TextView
        android:id="@+id/bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/profilePicture"
        android:text="TEST BIO"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

